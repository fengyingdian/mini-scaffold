<LoadingPage
  wx:if="{{attachLoadingPage}}"
  show="{{showLoadingPage}}"/>
<LaunchingPage
  wx:if="{{showLaunchingPage}}"
  show="{{showLaunchingPage}}"/>
<TopBar />
<view
  class='container'>
  <view class="topHider" style="height:{{marginTop}}px;"/>
  <block wx:for="{{articles}}" wx:for-item="data">
    <block wx:for="{{data}}" wx:for-item="item">
      <block wx:if="{{item.prime}}">
        <ArticleCardWithPrime
          index="{{index}}"
          data="{{item}}"
          bindarticle="tapArticle" />
      </block>
      <block wx:else>
        <ArticleCard
          index="{{index}}"
          data="{{item}}"
          gyro="{{gyro}}"
          bindarticle="tapArticle" />
      </block>
    </block>
  </block>
  <view wx:if="{{fetchedAll}}" class="tips">{{bottomTips}}</view>
  <view hidden="{{fetchedAll}}" class="bottom">
    <LoadingSmall />
  </view>
